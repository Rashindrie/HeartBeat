<% if current_user && current_user.doctor? %>
    <%= render partial: 'doctor/sideNav' %>
<% end %>
<main style="padding-left: 240px">
  <div class="container " style="width: 85%">
    <div class="row">
      <h4>Add new visit</h4>
      <div class="divider"></div>

      <div class="row">
        <div class="col s8">
        <form action="/visit/add/<%= @doctor.id %>/<%= @patient.id %>" method="post" style="">
          <br/>


            <div class="row">

              <div class="input-field col s12">

                <textarea id="problem" class="materialize-textarea" name="visit[problems_complaints]"></textarea>
                <label for="problem">Problems and Complaints</label>

              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <textarea id="diagnosis" class="materialize-textarea" name="visit[diagnosis]"></textarea>
                <label for="diagnosis">Diagnosis</label>

              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <textarea id="drug" class="materialize-textarea" name="visit[drugs]"></textarea>
                <label for="drug">Prescribed Drugs</label>

              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">

                <textarea id="remark" class="materialize-textarea" name="visit[remarks]"></textarea>
                <label for="remark">Remarks</label>
              </div>


            </div>


            <div class="row">
              <div class="col s9">
                <button class="btn waves-effect waves-light" type="Submit">Save</button>
              </div>
              <div class="left-align col s3">
                <a class="btn waves-effect waves-light" href="/visit/<%= @doctor.id %>/<%= @patient.id %>">Back</a>
              </div>
            </div>

        </form>
        </div>
        <div class="col s4">


        <div id="profile-card" class="card sticky-action z-depth-4">
          <div class="card-image waves-effect waves-block waves-light">
            <br>

            <%= image_tag("Heart_Beat.png", :alt => "user background") %>
          </div>

          <div class="card-content">
            <a class="btn-floating activator btn-move-up waves-effect purple waves-light darken-2 right">
              <i class="material-icons">account_circle</i></a>
            <span class="card-title activator grey-text text-darken-4"><strong>Roger Waters</strong></span>
            <p><i class="material-icons prefix">wc</i>Male</p>
            <p><i class="material-icons prefix">cake</i>21 year(s)</p>

          </div>
          <div class="card-reveal" style="display: none; transform: translateY(0px);">
            <span class="card-title grey-text text-darken-4">Roger Waters <i class="mdi-navigation-close right"></i></span>
            <p><i class="material-icons prefix">wc</i>Male</p>
            <p><i class="material-icons prefix">cake</i>21 year(s)</p>
            <p><i class="material-icons prefix">email</i>roger@waters.com</p>
            <p><i class="material-icons prefix">phone</i>+94 77 3831036</p>

          </div>
        </div>

      </div>


    </div>
    <div id="save" class="modal">
      <div class="modal-content">
        <h4>Add Appointment</h4>
        <p>Are you sure you want to save?</p>
      </div>
      <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat ">Yes</a>
      </div>
    </div>


  </div>
</main>