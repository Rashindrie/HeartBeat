<!DOCTYPE html>
<html>
<head>
  <script type="text/javascript">
      $(document).ready(function(){
          $('select').material_select();
          $('#doctorSelect').hide();


          $('input[type="radio"]').click(function() {
              if($(this).attr('id') == 'doctor') {
                  $('#doctorSelect').show();

              }
              else{
                  $('#doctorSelect').hide();


              }
          });
      });


  </script>



</head>




<body>
<header>
  <div class="navbar-fixed">
    <nav class="white-text">

      <div class="teal darken-3 white-text" style="font-family: Trajan Pro">

        <ul class="left " style="height: 80px; width: 170px; padding-top: 5px">
          <img class="responsive-img"
               <%= image_tag("Heart_Beat.png", :alt => "rss feed") %>
          />
        </ul>

        <a href="#!" class="brand-logo center"><strong>HeartBeat</strong></a>
        <ul class="right hide-on-med-and-down">


          <li class="active"><a href="/login"><i class="material-icons left">account_circle</i>Sign In</a></li>

        </ul>
      </div>
    </nav>

  </div>



</header>


<main>
  <div style="width:100%;height:100%;position: relative;">
    <div class="" style="width:100%;">
      <div class="container">
        <div class="row">
          <div class="col s9 offset-m2">
            <form class="card z-depth-4" action="/signup" method="post" style=" ">
              <div class="card-image col s3" style="width: 100%">

                <%= image_tag("Heart_Beat.png", :alt => "rss feed") %>

              </div>
              <div class="card-content">
                <span class="card-title"><h5>Register</h5></span>




                <div class="row">

                  <div class="input-field col s12 m6 l4">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="first_name" type="text" name="user[first_name]" class="validate">
                    <label for="first_name">First Name</label>
                  </div>

                  <div class="input-field col s12 m6 l4">
                    <input id="middle_name" type="text" name="user[middle_name]" class="validate">
                    <label for="middle_name">Middle Name</label>
                  </div>

                  <div class="input-field col s12 m6 l4">
                    <input id="last_name" type="text" name="user[last_name]" class="validate">
                    <label for="last_name">Last Name</label>
                  </div>

                </div>



               <div class="row ">
                  <div class="input-field col s12 l6">
                    <i class="material-icons prefix">phone</i>
                    <input id="telephone" type="tel" name="user[telephone]" class="validate">
                    <label for="telephone">Telephone</label>
                  </div>

                  <div class="input-field col s12 l6">
                    <i class="material-icons prefix">email</i>
                    <input id="email" type="email" name="user[email]" class="validate">
                    <label for="email" data-error="wrong" data-success="right">Email</label>
                  </div>
                </div>

                <div class="row">
                  <div class="col s12">
                    <i class="material-icons prefix">wc</i>
                    <div class="col s12">
                      <div class="col s12 left aligned">
                        <input class="with-gap" name="user[gender]" value="0" checked="checked" type="radio" id="male" />
                        <label for="male">Male</label>
                      </div>
                      <div class="col s12 left aligned">
                        <input class="with-gap" name="user[gender]" value="1" type="radio" id="female" />
                        <label for="female">Female</label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                <div class="col s12">
                  <i class="material-icons prefix">person</i>
                  <div class="col s12">
                    <div class="col s6 left aligned">
                      <input class="with-gap" name="user[role]" value="2" type="radio" id="doctor"  />
                      <label for="doctor">Doctor</label>
                    </div>
                    <div class="col s6">
                      <div class="input-field" id="doctorSelect">
                        <select name="user[doctor_type_id]">
                          <% @doctor_types.each do |d| %>
                              <option value="<%= d.id %>"><%= d.speciality %></option>
                          <% end %>
                        </select>

                              <label>Doctor Type</label>
                      </div>
                    </div>
                  </div>
                  <div class="col s12">
                    <div class="col s6 left aligned">
                      <input class="with-gap" name="user[role]" value="3" type="radio" id="staff" checked="checked" />
                      <label for="staff">Clinical Staff</label>
                    </div>
                  </div>
                </div>

                </div>

                <div class="row ">

                  <div class="input-field col s6">
                    <i class="material-icons prefix">lock</i>
                    <input id="password" type="password" name="user[password]" class="validate">
                    <label for="password">Password</label>
                  </div>
                </div>

                <div class="divider"></div><br>

                <div class="row">
                  <div class="col s12">
                    <button class="btn waves-effect waves-light col s12" type="submit" id="submit" >Register</button>
                  </div>
                </div>

              </div>

            </form>
          </div>
        </div>






      </div>

    </div></div>
  </div></div>
</main>




</body>

</html>


