<!DOCTYPE html>
<html>
<head>
  <script type="text/javascript">
      $(document).ready(function(){

          $('select').material_select();
          $('.modal').modal();


          $('.scrollspy').scrollSpy();
          $('.datepicker').pickadate(
              {
                  selectMonths: true,
                  selectYears: 100,
                  closeOnSelect: true,
                  max: new Date()
              });

          $('.fixed').pushpin({
              top: 0,
              bottom: 1500,
              offset: 0,

          });
      });


  </script>

  <style>
    .navbar-material .nav-wrapper .brand-logo img {
      height: 64px;
    }
    @media (max-width: 600px) {
      .navbar-material .nav-wrapper .brand-logo img {
        height: 56px;
      }
    }
    main, footer {

    }

    @media only screen and (max-width : 992px) {
      main, footer {
        padding-left: 0;
      }
    }

  </style>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>




<body>
<header>
  <div class="navbar-fixed">
    <nav class="teal darken-3 white-text">

      <div class="nav-wrapper teal darken-3 white-text" style="font-family: Trajan Pro">


        <a href="#!" class="brand-logo center"><strong>HeartBeat</strong></a>
        <ul class="right hide-on-med-and-down">
          <!li><!a class="waves-effect waves-light btn"><!i class="material-icons right"><!/i><!/a><!/li>

          <li class="active"><a href="signIn"><i class="material-icons left">account_circle</i>Sign In</a></li>

        </ul>
      </div>
    </nav>

  </div>



</header>


<main>
  <div style="width:100%;height:100%;position: relative;">
    <div class="" style="width:100%;">
      <div class="container">
        <div class="row">
          <div class="col s12 m9 offset-m2">
            <form class="card z-depth-4" action="users#createPatient" method="post" style="top: 15px ">

              <div class="card-image col s3" style="width: 100%">

                <%= image_tag("Heart_Beat.png", :alt => "rss feed") %>

              </div>
              <div class="card-content">
                <span class="card-title">Sign Up</span>

                <div class="section">

                  <div id="personal"  class="section scrollspy">
                    <div class="row">

                      <div class="input-field col s12 m6 l4">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="first_name" type="text" class="validate">
                        <label for="first_name">First Name</label>
                      </div>

                      <div class="input-field col s12 m6 l4">
                        <input id="middle_name" type="text" class="validate">
                        <label for="middle_name">Middle Name</label>
                      </div>

                      <div class="input-field col s12 m6 l4">
                        <input id="last_name" type="text" class="validate">
                        <label for="last_name">Last Name</label>
                      </div>

                    </div>

                    <div class="row">
                      <div class="col s12">
                        <i class="material-icons prefix">wc</i>
                        <div class="col s12">
                          <div class="col s6 left aligned">
                            <input name="gender" type="radio" id="male" />
                            <label for="male">Male</label>
                          </div>
                          <div class="col s6 left aligned">
                            <input name="gender" type="radio" id="female" />
                            <label for="female">Female</label>
                          </div>
                        </div>
                      </div>
                    </div>

                    <br>


                    <div class="row">

                      <div class="input-field col s12 l5">
                        <i class="material-icons prefix">today</i>

                        <input id="dob" value="" type="date" name="dob" class="datepicker">
                        <label class="active" for="dob">Date of Birth</label>
                      </div>
                    </div>


                    <div class="row">

                      <div class="input-field col s12 l5">
                        <i class="material-icons prefix">perm_identity</i>
                        <input id="nic" type="text" class="validate">
                        <label for="nic">NIC</label>
                      </div>
                    </div>
                  </div>


                    <div id="contact"  class="section scrollspy">
                      <div class="row">
                        <div class="input-field col s12 l5">
                          <i class="material-icons prefix">phone</i>
                          <input id="telephone" type="tel" class="validate">
                          <label for="telephone">Telephone</label>
                        </div>
                      </div>

                      <div class="row">
                        <div class="input-field col s12 m5">
                          <i class="material-icons prefix">email</i>
                          <input id="email" type="email" class="validate">
                          <label for="email" data-error="wrong" data-success="right">Email</label>
                        </div>
                      </div>
                    </div>


                  <div class="row ">

                    <div id="pwd" class="section scrollspy">
                      <div class="row">
                        <div class="input-field col s12 m5">
                          <i class="material-icons prefix">lock</i>
                          <input id="password" type="password" class="validate">
                          <label for="password">Password</label>
                        </div>
                      </div>
                    </div>

                    <div class="row margin">
                      <div id="submit" class="section scrollspy">
                        <div class="row">
                          <div class="col s12">
                            <p class="left-align " style="padding-left: 20px"><button class="btn waves-effect waves-light  z-depth-5" style="background-color: darkorange" type="button" name="action">Sign Up</button></p>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>


                </div>
              </div>

            </form>




          </div>
          <div class="fixed col hide-on-small-only l1" style="width: 16.6666666667%">

            <div class="toc-wrapper pin-top" style="top: 50px;  ">
              <div style="height: 10px;">
                <ul class=" section table-of-contents">
                  <li><a href="#personal">Personal Details</a></li>
                  <li><a href="#contact">Contact Details</a></li>
                  <li><a href="#pwd">Security</a></li>
                  <li><a href="#submit">Submit</a></li>
                </ul>
              </div>
            </div>

          </div>
        </div></div>
    </div></div>
</main>




</body>

</html>


