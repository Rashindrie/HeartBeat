
  <script type="text/javascript">
      $(document).ready(function(){

          $('select').material_select();
});


  </script>

<main>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <div class=" " style="width:100%;height:100%;position: relative;">
    <div class="" style="width:100%;">
      <div class="container">
        <div class="row">
          <div class="col s12 m6 offset-m3">
            <form class="card z-depth-4" action="/attempt_login" method="post" style="">

              <div class="card-image col s3" style="width: 450px">
                <br>
                <%= image_tag("Heart_Beat.png", :alt => "rss feed") %>

              </div>
              <div class="card-content">
                <span class="card-title">Sign In</span>


                <div class="row margin">
                  <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input id="email" type="email" name="session[email]" class="active validate">
                    <label for="email" >Email</label>
                  </div>
                </div>

                <div class="row margin">
                  <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    <input id="password" type="password" name="session[password]" class="validate">
                    <label for="password">Password</label>
                    <%= link_to "(Forgot password)", new_password_reset_path %>
                  </div>
                </div>



                <div class="row">
                  <button class="btn waves-effect waves-light col s12" type="submit" id="submit" >Login</button>

                </div>
                <div class="divider"></div>
                <div class="row">
                  <div class="input-field col s12">
                    <span> Not a user? </span> <br>
                    <p class="margin medium-small"><a href="/signup/patient">Register Now!</a></p>
                  </div>

                </div>




              </div>





            </form>

          </div>
        </div>
      </div></div>
  </div>
</main>



