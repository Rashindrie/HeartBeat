        <h4>Search Patients</h4>

        <div class="divider"></div><br>


        <div class="table-responsive">
          <table id="dataTable" data-source="<%= search_patients_path(format: :json) %>" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr class="filters">
              <th><input/></th>
              <th><input/></th>
              <th>
                <%= collection_select(:patient, :id ,Patient.all , :id, :full_name, include_blank: true) %>
              </th>
            </tr>
            <tr>
              <th>Id</th>
              <th>Full Name</th>
            </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>



      </form>
    </div>
  </div>

</main>